root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false

# YAML exige estritamente 2 espaços. 4 espaços ou tabulação quebram o workflow.
[*.{yml,yaml}]
indent_size = 2

[*.rs]
indent_size = 4

[*.sh]
end_of_line = lf
indent_size = 4

[*.{css,html,js,json}]
indent_size = 2

[*.toml]
indent_size = 4

[*.{bat,cmd,ps1}]
end_of_line = crlf
